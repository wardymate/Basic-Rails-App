<h1>New Question</h1>

    <div class="row">
      <div class="col-md-4">
        <p>Guidelines for questions</p>
        <ul>
          <li>Be sure to ask thoughtful questions</li>
          <li>Ensure good grammar.</li>
          <li>Be patient in waiting for an answer.</li>
        </ul>
      </div>
      <div class="col-md-8">
        <%= form_for @question do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control', placeholder: "Enter question title" %>
          </div>
          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter question body" %>
          </div>
          <div class="form-group">
            <%= f.label :resolved %>
            <%= f.check_box :resolved, class: 'checkbox' %>
          </div>
          <div class="form-group">
            <%= f.submit "Save", class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
