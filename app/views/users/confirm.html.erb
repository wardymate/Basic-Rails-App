<h2>Sign Up Confirmation</h2>
<h3>Are you sure these values are correct?</h3>

<div class="row">
  <div class="col-md-8">
    <p><%= @user.email %></p>
    <p><%= @user.password %></p>

    <%= link_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-primary', method: :post %>
    <%= link_to "No", new_user_path, class: 'btn btn-danger' %>
  </div>
</div>
